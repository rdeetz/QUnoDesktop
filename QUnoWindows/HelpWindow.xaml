<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Mooville.QUno.Windows.HelpWindow"
    Title="QUno Help"
    Width="500" Height="375" MinWidth="320" MinHeight="240"
    ResizeMode="CanResize" ShowInTaskbar="False" SnapsToDevicePixels="True">
    <Grid>
        <DocumentViewer Name="viewer"/>
        <TextBlock
            Name="textError"
            Text="The help file cannot be found."
            HorizontalAlignment="Center" VerticalAlignment="Center"
            Visibility="Hidden"/>
    </Grid>
</Window>
